    // Fonction qui calcule le n eme terme de la suite de fibonacci
    fonction fibonacci(entier n) debut
        entier resultat;
        si n < 2 alors
            resultat = n;
        sinon
            //ecrire n;
            resultat = fibonacci(n - 1) + fibonacci (n - 2);
        finsi
        retourne resultat;
    fin

